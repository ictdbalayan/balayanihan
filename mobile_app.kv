WindowManager:
    MainWindow:
    MenuWindow:
    UserWindow:
    SignupWindow:

#################################################### HOME PAGE #####################################################

<MainWindow>:
    name: "home"

    FloatLayout:
        orientation: "vertical"
        size: root.width, root.height

        pos_hint : {"center_x":.5,"center_y":.5}
        canvas.before:
            Rectangle:
                source: 'bg1.png'
                pos: self.pos
                size: 320, 680
        padding : 30
        spacing : 30
        orientation : "vertical"

        Image:
            source: 'bgc2.png'
            size: 290,250
            pos: 15, 490
            texture: self.texture
            size_hint: (None, None)

        Image:
            source: 'newlogo.png'
            size: 180,180
            pos: 70, 360
            texture: self.texture
            size_hint: (None, None)

        Label:
            markup: True
            text : "[b]BALAYANIHAN[/b]"
            color: (1,1,1,1)
            font_style : 'Button'
            font_size : 35
            size_hint_y : None
            pos: -4, 290

        TextInput:
            id: login
            icon_right: "account"
            hint_text : "username"
            size_hint: (.5, .04)
            height: 10
            font_size : 14
            pos: 80, 280
            color_active : [0,0.5,0.5,1]
            multiline:False
            write_tab: False
            on_text_validate: root.foo()

        Image:
            source: 'login.png'
            size: 15, 15
            pos: 218, 286
            texture: self.texture
            size_hint: (None, None)

        TextInput:
            id: passw
            hint_text : "password"
            icon_right : "eye-off"
            size_hint: (.5, .04)
            font_size : 14
            pos: 80, 240
            color_active : [0,0.5,0.5,1]
            password : False
            multiline:False
            write_tab: False
            on_text_validate: root.foo()

        Image:
            source: 'key.png'
            size: 15, 15
            pos: 218, 246
            texture: self.texture
            size_hint: (None, None)

        Label:
            id: err_lbl
            size_hint: (.5, .04)
            font_size : 12
            pos: 80, 210
            color_active : [0,0.5,0.5,1]

        Button:
            text: "Login"
            font_size: 12
            pos: 130, 170
            background_color: (0.5,0.5,1,1)
            size_hint: (.2, .05)
            on_release:
                root.verify_credentials()
                root.manager.transition.direction = "left"

        RoundedButton:
            text: "Menu"
            font_size: 12
            pos: 130, 130
            size_hint: (.2, .05)
            on_release:
                app.root.current = "menu"
                root.manager.transition.direction = "left"

        Label:
            text: "Don't have an account?"
            size_hint: (.5, .04)
            font_size : 11
            pos: 168, 550
            color: (1,1,1,1)

        Button:
            markup: True
            text: "[b][u]Sign-up[/u][/b]"
            font_size: 12
            color: (1,1,1,1)
            background_color: (0,0,0,0)
            pos: 245, 530
            size_hint: (.2, .05)
            on_release:
                app.root.current = "sign_up"
                root.manager.transition.direction = "left"

        Image:
            source: 'wc.png'
            size: 250, 250
            pos: 35, -75
            texture: self.texture
            size_hint: (None, None)

############################################# (Design Button: Round) ###############################################

<RoundedButton@Button>
    background_color: (0, 0, 0, 0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (48/255,84/255,150/255,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]

<RoundedButton2@Button>
    background_color: (0, 0, 0, 0)
    background_normal: ''
    color: 1,1,1,1
    canvas.before:
        Color:
            rgba: (64/255,0/255,255/255,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]

